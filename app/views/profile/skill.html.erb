<div class="p-5">
  <div class="text-center mb-6">
    <h1 class="text-4xl font-bold">My Projects</h1>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="p-3 rounded-lg shadow-lg scale-up-center">
        <div class=" rounded-lg p-3 bg-white">
          <%= link_to project["url"], target: "_blank" do %>
            <%= image_tag(project["thumbnail"], alt: project["title"], class: "w-full h-auto mb-4") %>
          <% end %>
          <h2 class="text-xl font-bold mb-2"><%= project['title'] %></h2>
          <p class="text-gray-600 mb-4"><%= project['summary'] %></p>
          <p class="text-gray-600 mb-4"><%= project['content'] %></p>
          <div class="flex justify-between items-center mb-4">
            <%= link_to 'View Project', project['url'], class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded', target: '_blank' %>
            <%= link_to 'GitHub', project['github'], class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ', target: '_blank' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div>
</div>
