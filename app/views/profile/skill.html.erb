<div>
  <div class="text-center">
    <h1 class="text-4xl text-center">My Projects</h1>
  </div>
  <%# <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"> %>
  <div class="flex justify-center">
    <% @projects.each do |project| %>
      <div class="border p-5  m-3 rounded shadow-lg bg-white">
        <%= link_to project["url"], target: "_blank" do %>
          <%= image_tag(project["thumbnail"], alt: project["title"], width: "400") %>
        <% end %>
        <h2 class="text-xl font-bold mb-2"><%= project['title'] %></h2>
        <p class="text-gray-600 mb-4"><%= project['summary'] %></p>
        <p class="text-gray-600 mb-4"><%= project['content'] %></p>
        <div class="flex justify-between items-center mb-4">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">View Project</button>
          <a href="<%= project['url'] %>" class="text-blue-500 hover:underline" target="_blank">View Project</a>
          <a href="<%= project['github'] %>" class="text-blue-500 hover:underline" target="_blank">GitHub</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
